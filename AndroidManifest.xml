        <activity
            android:name=".DrawFragment1"
            android:label="Front" >
        </activity>
        <activity
            android:name=".DrawFragment2"
            android:label="Back" >
        </activity>
        <activity
            android:name=".ShirtLayout"
            android:label="Confirm Shirt Layout" >
        </activity>
    </application>

</manifest>
